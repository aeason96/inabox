<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/join_frame"
    android:background="@drawable/ic_trianglify_background">

    <EditText
        android:background="@drawable/box_edit_text"
        android:textColor="@color/red"
        android:layout_width="160dp"
        android:layout_height="46dp"
        android:inputType="text"
        android:id="@+id/game_name"
        android:hint="Enter Game Name"
        android:textColorHint="@color/redOrange"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="37dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.019" />

    <EditText
        android:background="@drawable/box_edit_text"
        android:textColor="@color/red"
        android:layout_width="220dp"
        android:layout_height="46dp"
        android:inputType="textPassword"
        android:id="@+id/game_password"
        android:hint="Enter Game Password"
        android:textColorHint="@color/redOrange"
        android:textAlignment="center"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="37dp" />

    <EditText
        android:background="@drawable/box_edit_text"
        android:textColor="@color/red"
        android:layout_width="150dp"
        android:layout_height="46dp"
        android:inputType="text"
        android:id="@+id/player_name"
        android:hint="Enter Your Name"
        android:textColorHint="@color/redOrange"
        android:textAlignment="center"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.96"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="37dp" />

    <Button
        android:background="@drawable/button_style"
        android:id="@+id/join_button"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:text="Join!"
        android:textSize="20dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="98dp" />

</android.support.constraint.ConstraintLayout>