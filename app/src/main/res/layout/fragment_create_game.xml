<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/create_frame"
    android:background="@drawable/ic_trianglify_background">

    <EditText
        android:textAlignment="center"
        android:background="@drawable/box_edit_text"
        android:textColor="@color/red"
        android:textColorHint="@color/redOrange"
        android:layout_width="165dp"
        android:layout_height="51dp"
        android:inputType="text"
        android:id="@+id/game_name"
        android:hint="@string/game_name"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <EditText
        android:textAlignment="center"
        android:background="@drawable/box_edit_text"
        android:textColor="@color/red"
        android:textColorHint="@color/redOrange"
        android:layout_width="165dp"
        android:layout_height="51dp"
        android:inputType="textPassword"
        android:id="@+id/game_password"
        android:hint="@string/password"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toBottomOf="@+id/game_name"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <EditText
        android:textAlignment="center"
        android:background="@drawable/box_edit_text"
        android:textColor="@color/red"
        android:textColorHint="@color/redOrange"
        android:id="@+id/username"
        android:layout_width="165dp"
        android:layout_height="51dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="48dp"
        android:hint="@string/user_name"
        android:inputType="text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/game_password"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:background="@drawable/button_style"
        android:textSize="20dp"
        android:id="@+id/start_game"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:text="@string/start_game"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="76dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>