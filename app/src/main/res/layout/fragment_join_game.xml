<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/join_frame"
    android:background="@drawable/ic_trianglify_background">

    <EditText
        android:background="@drawable/box_edit_text"
        android:textColor="@color/red"
        android:layout_width="199dp"
        android:layout_height="45dp"
        android:inputType="text"
        android:id="@+id/game_name"
        android:hint="@string/enter_game_name"
        android:textColorHint="@color/redOrange"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="39dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <EditText
        android:background="@drawable/box_edit_text"
        android:textColor="@color/red"
        android:layout_width="220dp"
        android:layout_height="46dp"
        android:inputType="textPassword"
        android:id="@+id/game_password"
        android:hint="@string/enter_game_password"
        android:textColorHint="@color/redOrange"
        android:textAlignment="center"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/game_name"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <EditText
        android:background="@drawable/box_edit_text"
        android:textColor="@color/red"
        android:layout_width="201dp"
        android:layout_height="45dp"
        android:inputType="text"
        android:id="@+id/player_name"
        android:hint="@string/enter_your_name"
        android:textColorHint="@color/redOrange"
        android:textAlignment="center"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/game_password"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="195dp"
        tools:layout_editor_absoluteX="66dp" />

    <Button
        android:id="@+id/join_button"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:text="@string/join"
        android:textSize="20dp"
        android:background="@drawable/button_style"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="45dp"
        app:layout_constraintTop_toBottomOf="@+id/player_name" />

</android.support.constraint.ConstraintLayout>